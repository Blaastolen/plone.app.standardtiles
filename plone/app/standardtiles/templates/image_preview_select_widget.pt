<div xmlns="http://www.w3.org/1999/xhtml"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     tal:omit-tag=""
     tal:define="upload_widget view/upload/widgets/image_upload;
                 method view/method">
<script type="text/javascript" tal:content="structure view/js"></script>

<input type="radio" value="existing" 
       tal:attributes="name string:${view/name}.method;
                       id string:${view/id}-existing;
                       onclick string:document.getElementById('${view/id}').disabled=false;; document.getElementById('${upload_widget/id}').disabled=true;
                       checked python:(method == 'existing') and 'checked' or None;" />
<label tal:attributes="for string:${view/id}-existing;">Use an existing image</label> <br />

<select id="" name="" class="" tabindex="" disabled="" multiple="" size=""
        tal:attributes="id view/id;
                        name string:${view/name}:list;
                        class view/klass;
                        style view/style;
                        title view/title;
                        lang view/lang;
                        onclick view/onclick;
                        ondblclick view/ondblclick;
                        onmousedown view/onmousedown;
                        onmouseup view/onmouseup;
                        onmouseover view/onmouseover;
                        onmousemove view/onmousemove;
                        onmouseout view/onmouseout;
                        onkeypress view/onkeypress;
                        onkeydown view/onkeydown;
                        onkeyup view/onkeyup;
                        disabled view/disabled;
                        tabindex view/tabindex;
                        onfocus view/onfocus;
                        onblur view/onblur;
                        onchange view/onchange;
                        multiple view/multiple;
                        size view/size">
<tal:block repeat="item view/items"
  ><option id="" value="" selected="selected"
         tal:condition="item/selected"
         tal:attributes="id item/id;
                         value item/value;
                         title python:view.getImageURLFromId(item['value']) + '/image_thumb'"
         tal:content="item/content">label</option
  ><option id="" value=""
         tal:condition="not:item/selected"
         tal:attributes="id item/id;
                         value item/value;
                         title python:view.getImageURLFromId(item['value']) + '/image_thumb'"
         tal:content="item/content">label</option
></tal:block>
</select>
<input name="field-empty-marker" type="hidden" value="1"
       tal:attributes="name string:${view/name}-empty-marker" />
<div style="text-align:center; border: solid black 1px;
            margin: 5px; padding: 10px;
            width: 120px; height:120px;">
  <img id="image-preview" alt="" 
       tal:attributes="id string:${view/id}-image-preview;
                       src python:view.value and view.getImageURLFromId(view.value[0]) + '/image_thumb' or ''" />
</div>

<input type="radio" value="upload" 
       tal:attributes="name string:${view/name}.method;
                       id string:${view/id}-upload;
                       checked python:(method == 'upload') and 'checked' or None;
                       onclick string:document.getElementById('${view/id}').disabled=true;; document.getElementById('${upload_widget/id}').disabled=false;" />
<label tal:attributes="for string:${view/id}-upload;">Upload a new image</label>

<div tal:replace="structure view/upload/render" />
<script tal:condition="python: method!='upload'" type="text/javascript"
        tal:content="string:document.getElementById('${upload_widget/id}').disabled=true;; document.getElementById('${view/id}').disabled=false;">
</script>

</div>
